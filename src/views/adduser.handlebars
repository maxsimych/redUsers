<h1>Add User</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form action="/user/add" method="POST">
  <div class="form-group">
    <label>First Name</label>
    <input type="text" name="firstName" class="form-control" placeholder="George">
  </div>
  <div class="form-group">
    <label>Last Name</label>
    <input type="text" name="lastName" class="form-control" placeholder="Bush">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="text" name="email" class="form-control" placeholder="president43@gmail.com">
  </div>
  <div class="form-group">
    <label>Phone</label>
    <input type="text" name="phone" class="form-control" placeholder="+0 111 333 33 33">
  </div>
  <input type="submit" class="btn btn-primary" value="Save">
</form>